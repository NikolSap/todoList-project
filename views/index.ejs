<script src="https://kit.fontawesome.com/a1a0aee510.js" crossorigin="anonymous"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Comic+Neue:ital@0;1&display=swap" rel="stylesheet">
<%- include("partials/header.ejs") %>

<div class="body">
  <h1><%= listTitle %></h1>
  <h1><%= day %> ,<%= date %> <%= month %> <%= year %></h1>

  <div class="card">

    <form action="/" method="POST">
      <input type="text" id="task" name="task" placeholder="New Task" />
      <button type="submit" name="list" value="<%=listTitle %>">+</button>
    </form>
  

      <div class="input-container">
        <% if (tasks && tasks.length > 0) { %>
            <% tasks.forEach(task => { %>
              <form class="item" action="/delete" method="post">
              <div class="taskItem">
                <input type="checkbox" name="taskCheckBox" value="<%= task._id%>" onchange="this.form.submit()"/>
                <label class="strikethrough"><%= task.name %></label><br>
              </div>
              <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>

            <% }); %>

         
        <% } %>
        
    
        </div>
       
        <div class="gif-container">
          <img class="gif" src="checklist.gif">
        </div>
      </div>
  </div>



<%- include("partials/footer.ejs") %>

